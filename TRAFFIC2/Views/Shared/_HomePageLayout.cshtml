</div>
	

	<!-- End Hero Section -->
	<main>
		@RenderBody();
	</main>

	<br />
	<br />

	<br />
	<!-- Start Footer Section -->
	<footer class="footer-section">
		<div class="container relative">
			<div class="row g-5 mb-5">
				
				<div class="col-lg-4">
					<div class="mb-4 footer-logo-wrap">
						<a  class="footer-logo">
							Your One-Stop Solution for Managing Car Violations  !
							<span>.</span>
						</a>
					</div>
					<p class="mb-4">
						"Welcome to Traffic Violations, your one-stop solution for effortlessly managing and settling car violations. We understand that navigating through a sea of traffic offenses can be challenging. Our website is designed to simplify the process, making it easier for you to stay on top of your violations, anytime and anywhere."
				    </p>
			  </div>	
			</div>
				<!-- This column will contain the images -->
			@foreach (var image in Model.Item1)
			{

				<div class="sofa-img">
				<img src=@Url.Content("~/images/"+image.ImagePath1) width="400" height="400" />
			</div>
			
			<br />
			<br />
					<br />
			    <div class="trafic-img">
					<img src=@Url.Content("~/images/"+image.ImagePath2) width="400" height="400" />
				</div>
				<div class="violation-img">
					<img src=@Url.Content("~/images/"+image.ImagePath3) width="400" height="400" />
				</div>
			}
			<div class="row g-5 mb-5">
				<div class="col-lg-4">
					<div class="mb-4 footer-logo-wrap"><a href="~/HomePages/UserAbout" class="footer-logo">Why Us !<span>.</span></a></div>
					<p class="mb-4">Our user-friendly system allows you to effortlessly track all violations associated with your vehicles. No more guesswork or confusion</p>

					
				</div>

			</div>

			<div class="border-top copyright">
				<div class="row pt-4">
					<div class="col-lg-6">
						<p class="mb-2 text-center text-lg-start">
							Copyright &copy;<script>document.write(new Date().getFullYear());</script>. Traffic Violations. All Rights Reserved. 
						</p>
					</div>

					

				</div>
			</div>

		</div>
	</footer>
	<!-- End Footer Section -->


	<script src="~/HomeAssets/js/bootstrap.bundle.min.js"></script>
	<script src="~/HomeAssets/js/tiny-slider.js"></script>
	<script src="~/HomeAssets/js/custom.js"></script>
